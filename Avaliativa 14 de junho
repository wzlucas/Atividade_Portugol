6.
programa
{
	inclua biblioteca Matematica
	
	funcao inicio()
	{
	
         real n1, n2, mn

	
	   escreva("Digite o primeiro número: ")
	   leia(n1)
	
	   
	   escreva("Digite o segundo número: ")
	   leia(n2)
	
	   
	   se (n1 > n2)
	   {
	      mn = n1
	   }
	  
	   senao
	   {
	     mn = n2
	   }
	
	   escreva("O maior número é: ", mn)

	}
}
